<h3>Listing posts</h3>

<% if @posts.empty? %>
<p class="alert alert-warning">No posts available.</p>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Last updated</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to highlight(post.title), post %></td>
        <td><%= highlight(post.content) %></td>
        <td><%= time_ago_in_words(post.updated_at) + ' ago' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-default' %>
